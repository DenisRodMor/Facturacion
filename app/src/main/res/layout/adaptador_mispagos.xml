<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:backgroundTint="@color/colorPrimary">

    <TextView
        android:id="@+id/txtAdapPagoFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de pago" />

    <TextView
        android:id="@+id/txtAdappagoNumPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de pago"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAdapPagoNumCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de cliente"
        />

    <TextView
        android:id="@+id/txtAdapPagoNumFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de factura"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAdapPagoMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monto"
        />
    <TextView
        android:id="@+id/txtadapSPagoAbono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abono"
        />

    <TextView
        android:id="@+id/txtadapSPagosaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo"/>



</LinearLayout>